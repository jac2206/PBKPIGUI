        @RenderBody()
        <hr />
        <footer style="text-align:center">
            <label>
                <p>&copy; @DateTime.Now.Year -INTECOL - PASCUAL BRAVO</p>
            </label>
            @*<img width="120" height="120" src="~/Image/LOGO.jpg" style="padding:10px 10px 10px 10px" />*@
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
